    "lz-string": "^1.5.0",
    "slickgrid": "2.4.45"
  },
  "devDependencies": {
    "@types/slickgrid": "^2.1.36",
    "@types/webextension-polyfill": "^0.10.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
